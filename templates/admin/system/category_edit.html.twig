{% extends 'admin/layout.html.twig' %}

{% block stylesheets %}
<!-- Select2 -->
<link rel="stylesheet" href="{{ asset('static/adminlte/bower_components/select2/dist/css/select2.min.css') }}">
{% endblock %}

{% block website %}
  <h1>
    {% if data.id is empty %}新增{% else %}编辑{% endif %}
    <small>系统</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="{{ path('admin_home') }}"><i class="fa fa-home"></i> 系统</a></li>
    <li><a href="{{ path('admin_category') }}"> 分类</a></li>
    <li class="active">{% if data.id is empty %}新增{% else %}编辑{% endif %}</li>
  </ol>
{% endblock %}

{% block main %}
<div class="col-md-12">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">{% if data.id is empty %}新增{% else %}编辑{% endif %}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form">
      <div class="box-body">
        <div class="form-group">
          <label>类别</label>
          <select class="form-control select2" style="width: 100%;">
            {% for category in categorys %}
              <option value="{{ category.id }}">
                {% if category.parentid == 0 %}
                  {{ category.name }}
                {% else %}
                  {{ category.name }}---{{ category.pathName }}
                {% endif %}
              </option>
            {% endfor %}
            {# <option selected="selected">Alabama</option> #}
          </select>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">名称</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="请输入名称">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">别名</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="请输入别名">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">概述</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="请输入概述">
        </div>
      </div>
      <!-- /.box-body -->

      <div class="box-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- Select2 -->
<script src="{{ asset('static/adminlte/bower_components/select2/dist/js/select2.full.min.js') }}"></script>
<script>
$(function () {
  $('.select2').select2()
})
</script>
{% endblock %}